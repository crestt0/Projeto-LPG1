<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.listadeafazeresfx.ControleListaTarefas">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="campoNovaTarefa" promptText="Digite uma nova tarefa..." HBox.hgrow="ALWAYS" />
        <Button onAction="#eventoAdicionarTarefa" text="Adicionar" />
    </HBox>
    <ListView fx:id="listaDeTarefasView" VBox.vgrow="ALWAYS" />
    <Button onAction="#eventoRemoverTarefa" text="Remover Tarefa Selecionada" textFill="RED" />
</VBox>